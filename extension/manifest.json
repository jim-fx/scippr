{
  "name": "Scippr",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "to scipp, or to become scipped that is the question",
  "homepage_url": "https://jim-fx.com",
  "background": {
    "scripts": [
      "background/background.js",
      "background/hot-reload.js"
    ],
    "persistent": true
  },
  "web_accessible_resources": [
    "content/main.js",
    "content/simmer.js",
    "content/throttle.js"
  ],
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "browser_action": {
    "default_title": "Scippr",
    "default_popup": "popup/index.html"
  },
  "permissions": [
    "activeTab"
  ]
}